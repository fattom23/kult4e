<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div class="darksecret-box">
        <p>Description</p>
        <textarea name="data.description" placeholder="Description">{{data.description}}</textarea>
        <p>Effect</p>
        <textarea name="data.effect" placeholder="Effect">{{data.effect}}</textarea>
    </div>
</form>